    <decisions>
        <description>If Opportunity Stage is changed to Closed Won</description>
        <name>Check_Opportunity_Stage</name>
        <label>Check Opportunity Stage</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Opportunity_Update_Criteria</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>If_Stage_changed_to_Closed_Won</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.StageName</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.StageName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed Won</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Email_to_on_call_team_to_disable_webstore_access</targetReference>
            </connector>
            <label>If Stage changed to Closed Won</label>
        </rules>
    </decisions>
    <decisions>
        <name>If_Stage_is_Buyout_Document_Approved_Rejected</name>
        <label>If Stage is Buyout Document Approved/Rejected</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Document_Rejected</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Buyout_Stage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Invalid Documentation</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>BuyoutInvalidDocumentationNotification</targetReference>
            </connector>
            <label>Document Rejected</label>
        </rules>
        <rules>
            <name>Approved</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Buyout_Stage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Approved</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Buyout_Approved</targetReference>
            </connector>
            <label>Buyout Approved</label>
        </rules>
        <rules>
            <name>EFT_Requested_Electronic_Funds_Transfer</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Buyout_Stage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>EFT Requested (Electronic Funds Transfer)</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Buyout_EFT_Requested_Electronic_Funds_Transfer</targetReference>
            </connector>
            <label>EFT Requested (Electronic Funds Transfer)</label>
        </rules>
    </decisions>
