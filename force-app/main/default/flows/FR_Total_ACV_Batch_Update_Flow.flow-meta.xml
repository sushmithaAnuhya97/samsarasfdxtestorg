    <formulas>
        <description>GTMS-25823: Created as part of Feature Request phase 2 project</description>
        <name>Is_Last_Run_Before_88Days</name>
        <dataType>Boolean</dataType>
        <expression>IF(NOT(ISBLANK({!$Setup.Last_FR_Total_ACV_Batch_Run_Date__c.Last_Run_Date__c})),
IF(({!$Flow.CurrentDate} - DATEVALUE({!$Setup.Last_FR_Total_ACV_Batch_Run_Date__c.Last_Run_Date__c})) &gt; 88,
True,
False
),
True
)</expression>
    </formulas>
