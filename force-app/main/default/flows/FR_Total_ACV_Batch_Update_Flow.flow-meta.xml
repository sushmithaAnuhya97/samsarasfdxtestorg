    <decisions>
        <description>GTMS-25823: Created as part of Feature request phase 2 project to check the validations before executing the Total ACV batch</description>
        <name>Validation_Checks</name>
        <label>Validation Checks</label>
        <locationX>314</locationX>
        <locationY>134</locationY>
        <defaultConnector>
            <targetReference>Execute_FR_Total_ACV_Batch</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Between_6AM_to_6PM_US_Timing</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Time_Value</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <numberValue>2.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Time_Value</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>14.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Business_Hours_Error_Screen</targetReference>
            </connector>
            <label>Between 6AM to 6PM US Timing</label>
        </rules>
        <rules>
            <name>X88_Days_Not_Completed_Ater_Last_Run</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Is_Last_Run_Before_88Days</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>X88_Days_Error_Screen</targetReference>
            </connector>
            <label>88 Days Not Completed Ater Last Run</label>
        </rules>
    </decisions>
    <description>GTMS-25823: Created as part of Feature Request phase 2 project</description>
