<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Prepopulate_Subscription</name>
        <label>Prepopulate Subscription</label>
        <locationX>176</locationX>
        <locationY>431</locationY>
        <assignmentItems>
            <assignToReference>$Record.Downsell_Timeframe__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Downsell_Timeframe_Value</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <environments>Default</environments>
    <formulas>
        <description>Determines the value of the Downsell Timeframe field</description>
        <name>Downsell_Timeframe_Value</name>
        <dataType>Boolean</dataType>
        <expression>IF(
    {!$Record.Renewal_LineItem_type__c} = &apos;Downsell&apos;,
    IF(
        (NOT(ISBLANK({!$Record.SBQQ__SubscriptionStartDate__c}))),
        ({!$Record.SBQQ__SubscriptionStartDate__c} &lt;= (
            IF(
                MONTH({!Get_Contract.StartDate})=2 &amp;&amp; DAY({!Get_Contract.StartDate})=29,
                DATE(YEAR({!Get_Contract.StartDate})+1, 2, 28),
                DATE(YEAR({!Get_Contract.StartDate})+1, MONTH({!Get_Contract.StartDate}), DAY({!Get_Contract.StartDate}))
            )
        )),
        TRUE
    ),
    FALSE
)</expression>
    </formulas>
    <interviewLabel>Prepopulate Subscription Record {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Prepopulate Subscription Record</label>
    <processMetadataValues>
        <name>BuilderType</name>
