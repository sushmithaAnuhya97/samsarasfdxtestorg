<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Order_Contract_Check</name>
        <label>Order Contract Check</label>
        <locationX>769</locationX>
        <locationY>435</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Cancel_Opportunity</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Opportunity.Sub_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Contract Cancellation</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Return Completed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Order_Contracted_Checkbox_to_True</targetReference>
            </connector>
            <label>Is Cancel Opportunity</label>
        </rules>
        <rules>
            <name>Order_Type_Not_Remorse_Refund</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Type</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Remorse Refund</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Order_Contracted_Checkbox_to_True</targetReference>
            </connector>
            <label>Order Type Not &quot;Remorse Refund&quot;</label>
        </rules>
    </decisions>
    <description>GTMS-26041 - Contracted for Cancel Opportunity</description>
    <environments>Default</environments>
    <interviewLabel>Create Contract From Order {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Create Contract From Order</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
