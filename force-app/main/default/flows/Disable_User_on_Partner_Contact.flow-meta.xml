<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <description>GTMS-25568: Create to map false value to IsActive field on user records</description>
        <name>Deactivate_Partner_User</name>
        <label>Deactivate Partner User</label>
        <locationX>50</locationX>
        <locationY>674</locationY>
        <assignmentItems>
            <assignToReference>Partner_User_Record.IsActive</assignToReference>
            <operator>Assign</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Deactivate_Partner_Users</targetReference>
        </connector>
    </assignments>
    <choices>
        <description>GTMS-25568: Created this choice for Partner Disable confirmation</description>
        <name>Confirmation_No</name>
        <choiceText>No</choiceText>
        <dataType>String</dataType>
    </choices>
    <choices>
        <description>GTMS-25568: Created this YES Choice for Partner Disable Confirmation</description>
        <name>Confirmation_Yes</name>
        <choiceText>Yes</choiceText>
        <dataType>String</dataType>
    </choices>
    <decisions>
        <description>GTMS-25568: Created to check if the partner users exists related to the account</description>
        <name>Is_Partner_User_Exists</name>
        <label>Is Partner User Exists ?</label>
        <locationX>578</locationX>
        <locationY>458</locationY>
        <defaultConnector>
            <targetReference>No_User_Msg_Screen</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes_Partner_User_Exists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Partner_User_Record</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Partner_User_Active_Check</targetReference>
            </connector>
            <label>Yes, Partner User Exists</label>
        </rules>
    </decisions>
    <decisions>
        <description>GTMS-25568: Created to check if the partner user is active or inactive user</description>
        <name>Partner_User_Active_Check</name>
        <label>Partner User Active Check</label>
        <locationX>314</locationX>
        <locationY>566</locationY>
        <defaultConnector>
            <targetReference>Inactive_User_Msg_Screen</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Inactive User</defaultConnectorLabel>
        <rules>
            <name>Active_User</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Partner_User_Record.IsActive</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Deactivate_Partner_User</targetReference>
            </connector>
            <label>Active User</label>
        </rules>
    </decisions>
    <decisions>
        <description>GTMS-25568: Created to check the Confirmation of partner user deactivation</description>
        <name>Partner_User_Deactivation_Confirmed</name>
        <label>Partner User Deactivation Confirmed</label>
        <locationX>842</locationX>
        <locationY>242</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Confirmation_Radio_Buttons</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Confirmation_Yes</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Related_Partner_User_Records</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>GTMS-25568: Created to deactivate the Partner User from the Partner Contact record.</description>
    <environments>Default</environments>
    <interviewLabel>Disable User on Partner Contact {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Disable User on Partner Contact</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>Flow</processType>
    <recordLookups>
        <description>GTMS-25568: Created to fetch all the Partner User records related to that account</description>
        <name>Get_Related_Partner_User_Records</name>
        <label>Get Related Partner User Records</label>
        <locationX>578</locationX>
        <locationY>350</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Is_Partner_User_Exists</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>ContactId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <object>User</object>
        <outputReference>Partner_User_Record</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>IsActive</queriedFields>
        <queriedFields>Name</queriedFields>
    </recordLookups>
    <recordRollbacks>
        <description>GTMS-25568: to Roll back the User Deactivation changes</description>
        <name>User_Deactivation_Rollback</name>
        <label>User Deactivation Rollback</label>
        <locationX>314</locationX>
        <locationY>890</locationY>
        <connector>
            <targetReference>Error_Screen</targetReference>
        </connector>
    </recordRollbacks>
    <recordUpdates>
        <description>GTMS-25568: Created to Deactivate the Partner Users</description>
        <name>Deactivate_Partner_Users</name>
        <label>Deactivate Partner Users</label>
        <locationX>50</locationX>
        <locationY>782</locationY>
        <connector>
            <targetReference>Deactivation_Success_Screen</targetReference>
        </connector>
        <faultConnector>
            <targetReference>User_Deactivation_Rollback</targetReference>
        </faultConnector>
        <inputReference>Partner_User_Record</inputReference>
    </recordUpdates>
    <runInMode>SystemModeWithoutSharing</runInMode>
