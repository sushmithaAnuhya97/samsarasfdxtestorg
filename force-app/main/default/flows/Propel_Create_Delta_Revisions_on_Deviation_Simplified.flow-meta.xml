<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Add_1_to_Rev</name>
        <label>Add .1 to Rev</label>
        <locationX>470</locationX>
        <locationY>816</locationY>
        <assignmentItems>
            <assignToReference>DotRev</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>FirstDot_Formula</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Revision</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>Add_Variable_DotRev_to_the_Revision</name>
        <label>Add Variable DotRev to the Revision</label>
        <locationX>206</locationX>
        <locationY>816</locationY>
        <assignmentItems>
            <assignToReference>DotRev</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>LSR_ExistingDot_Formula</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Revision</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Does_LSR_have_in_the_rev</name>
        <label>Does LSR have &quot;.&quot; in the rev?</label>
        <locationX>338</locationX>
        <locationY>696</locationY>
        <defaultConnector>
            <targetReference>Add_1_to_Rev</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No dot</defaultConnectorLabel>
        <rules>
            <name>Contains_dot</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Latest_Superseded_Revision.PDLM__Revision__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>.</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Add_Variable_DotRev_to_the_Revision</targetReference>
            </connector>
            <label>Contains dot</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <description>formula to give the affected item the first .1 value</description>
        <name>FirstDot_Formula</name>
        <dataType>String</dataType>
        <expression>{!Get_Latest_Released_Revision.PDLM__Revision__c} &amp; &quot;.1&quot;</expression>
    </formulas>
    <formulas>
        <description>Grabs the existing &quot;dot&quot; value from the LSR, and ADDS 1</description>
        <name>IncrementedDotValue_from_LSR</name>
        <dataType>Number</dataType>
        <expression>VALUE (Right({!Get_Latest_Superseded_Revision.PDLM__Revision__c}, 1)) +1</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <description>Formula to increment the dotrev by 1 (or, more accurately, .1)</description>
        <name>LSR_ExistingDot_Formula</name>
        <dataType>String</dataType>
        <expression>{!Get_Latest_Released_Revision.PDLM__Revision__c} &amp; &quot;.&quot; &amp; TEXT({!IncrementedDotValue_from_LSR})</expression>
    </formulas>
    <interviewLabel>Propel: Create Delta Revisions on Deviation Simplified {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Propel: Create Delta Revisions on Deviation Simplified</label>
    <processMetadataValues>
        <name>BuilderType</name>
