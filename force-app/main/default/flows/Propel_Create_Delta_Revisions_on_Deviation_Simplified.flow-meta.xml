        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Does_LSR_have_in_the_rev</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>PDLM__Master_Item__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.PDLM__Item_Revision__r.PDLM__Master_Item__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>PDLM__Is_Latest__c</field>
            <operator>EqualTo</operator>
