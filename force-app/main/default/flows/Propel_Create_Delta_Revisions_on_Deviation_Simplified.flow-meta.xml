            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.PDLM__Item_Revision__r.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>PDLM__Revision__c</field>
            <value>
                <elementReference>DotRev</elementReference>
            </value>
        </inputAssignments>
        <object>PDLM__Item_Revision__c</object>
    </recordUpdates>
    <start>
