<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionCalls>
        <description>Deploy Enterprise Mid-Implementation Check-In Emails that trigger when the projects start date is 45 days prior for Premier and 90 days prior for Elite</description>
        <name>Mid_Impl_Check_In_Email</name>
        <label>Mid-Impl Check-In Email</label>
        <locationX>50</locationX>
        <locationY>360</locationY>
        <actionName>emailSimple</actionName>
        <actionType>emailSimple</actionType>
        <connector>
            <targetReference>Update_Project_Email_Sent_Status</targetReference>
        </connector>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <inputParameters>
            <name>emailAddresses</name>
            <value>
                <elementReference>$Record.Project_POC_Email_Address__c</elementReference>
            </value>
        </inputParameters>
        <inputParameters>
            <name>senderType</name>
            <value>
                <stringValue>OrgWideEmailAddress</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>senderAddress</name>
            <value>
                <stringValue>ic-managers-us-ent@samsara.com</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>emailSubject</name>
            <value>
                <stringValue>Samsara Implementation Experience Feedback</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>emailBody</name>
            <value>
                <elementReference>emailbody</elementReference>
            </value>
        </inputParameters>
        <inputParameters>
            <name>sendRichBody</name>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>useLineBreaks</name>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputParameters>
        <nameSegment>emailSimple</nameSegment>
    </actionCalls>
    <apiVersion>60.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Trigger_Email</name>
        <label>Trigger Email</label>
        <locationX>182</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_Triggeremail</name>
            <conditionLogic>(1 AND 3 AND (7 OR 8)) OR (2 AND 4 AND 9) AND 5 AND 6 AND 10</conditionLogic>
            <conditions>
                <leftValueReference>SelectandStrategicTargetDate</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>GetTodaysDate</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CoreTargetDate</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>GetTodaysDate</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>SelectandStrategicTargetDate</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>BeforeToday7Days</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CoreTargetDate</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>BeforeToday7Days</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mid_Imp_CI_Email_Sent__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.No_CI_Email__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Project_Level__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Select</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Project_Level__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Strategic</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Project_Level__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Core</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.pse__Stage__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>In Progress</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Mid_Impl_Check_In_Email</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>This email will trigger to Project POC from the IC Manager to gauge customer experience.</description>
    <environments>Default</environments>
    <formulas>
        <description>7 days before Trigger date</description>
        <name>BeforeToday7Days</name>
        <dataType>Date</dataType>
        <expression>Today()-7</expression>
    </formulas>
    <formulas>
        <name>CoreTargetDate</name>
        <dataType>Date</dataType>
        <expression>{!$Record.pse__Start_Date__c}+45</expression>
    </formulas>
    <formulas>
        <description>Trigger Date</description>
        <name>GetTodaysDate</name>
        <dataType>Date</dataType>
        <expression>Today()</expression>
    </formulas>
    <formulas>
        <name>SelectandStrategicTargetDate</name>
        <dataType>Date</dataType>
        <expression>{!$Record.pse__Start_Date__c}+90</expression>
    </formulas>
    <interviewLabel>Mid-IC Implementation Check-In Email {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Mid-IC Implementation Check-In Email</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>When Email is sent, this status the project will update to prevent additional emails from deploying</description>
        <name>Update_Project_Email_Sent_Status</name>
        <label>Update Project Email Sent Status</label>
        <locationX>50</locationX>
        <locationY>468</locationY>
        <inputAssignments>
            <field>Mid_Imp_CI_Email_Sent__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Trigger_Email</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Engagement_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Initial Implementation</stringValue>
            </value>
        </filters>
        <filters>
            <field>No_CI_Email__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Project_POC_Email_Address__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Project_Point_of_Contact_txt__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>pse__Stage__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>In Progress</stringValue>
            </value>
        </filters>
        <filters>
            <field>Lead_Implementation_Consultant__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>pse__Proj__c</object>
        <schedule>
            <frequency>Weekly</frequency>
            <startDate>2024-06-26</startDate>
            <startTime>08:00:00.000Z</startTime>
        </schedule>
        <triggerType>Scheduled</triggerType>
    </start>
    <status>Active</status>
    <textTemplates>
        <description>Mid-Implementation Check-in Email body</description>
        <name>emailbody</name>
        <isViewedAsPlainText>false</isViewedAsPlainText>
        <text>&lt;p&gt;&lt;span style=&quot;background-color: rgb(255, 255, 255); font-size: 12px; font-family: tahoma; color: rgb(0, 0, 0);&quot;&gt;Hi {!$Record.Project_Point_of_Contact_txt__c},&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;background-color: rgb(255, 255, 255); font-size: 12px; font-family: tahoma; color: rgb(0, 0, 0);&quot;&gt;My name is {!$Record.IC_Manager__c}, and I oversee {!$Record.IC_First_Name__c}, your Samsara Implementation Consultant. I am reaching out to see how the onboarding experience has been for {!$Record.pse__Account__r.Name} so far.&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;background-color: rgb(255, 255, 255); font-size: 12px; font-family: tahoma; color: rgb(0, 0, 0);&quot;&gt;Please reply with any feedback, questions, or concerns. I&apos;m happy to arrange time to discuss. We look forward to hearing from you soon. &lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;background-color: rgb(255, 255, 255); font-size: 12px; font-family: tahoma; color: rgb(0, 0, 0);&quot;&gt;Thanks,&lt;/span&gt;&lt;/p&gt;&lt;p&gt;{!$Record.IC_Manager_First_Name__c}&lt;/p&gt;</text>
    </textTemplates>
</Flow>
