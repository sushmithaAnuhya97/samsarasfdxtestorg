<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount</field>
        <field>License_Term__c</field>
        <field>Original_Approved_Discount__c</field>
        <field>Blended_Discount__c</field>
        <field>Discount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>nasim.bolandparvaz@samsara.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Renewal Manager needed to approve blended discount</description>
        <entryCriteria>
            <formula>Blended_Discount__c- Original_Approved_Discount__c&gt;= -0.05</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Renewal Discounts Approval-Blended - Manager Approval</label>
        <name>Renewal_Discounts_Approval_Blended_Manager_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>christine.hou@samsara.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Renewal approval needed from Manager</description>
        <entryCriteria>
            <formula>AND((Blended_Discount__c- Original_Approved_Discount__c&gt;= -0.05),( Blended_Discount__c-Original_Approved_Discount__c &gt;= 0))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Renewal Discounts Approval-Blended - Director Approval</label>
        <name>Renewal_Discounts_Approval_Blended_Director_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>robert.stobaugh@samsara.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Director Approval	Renewal approval needed from VP</description>
        <entryCriteria>
            <formula>AND((Blended_Discount__c- Original_Approved_Discount__c&gt;= -0.05),( Blended_Discount__c-Original_Approved_Discount__c &gt;= 0.10))</formula>
        </entryCriteria>
        <label>Renewal Discounts Approval-Blended - VP Approval</label>
        <name>Renewal_Discounts_Approval_Blended_VP_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Renewal approvals for revenue opportunities w/ additional steps</description>
    <emailTemplate>unfiled$public/Renewal_Discount_Approval_Notification_to_Managers</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(ISPICKVAL(Type , &apos;Revenue Opportunity&apos;), CONTAINS(Owner.UserRole.Name,&apos;Renewal&apos;),(Renewal__c = True))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected_Discounts_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Rejectedd</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Renewal Discounts Approval-Blended v.6</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
