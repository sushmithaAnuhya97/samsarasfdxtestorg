<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount</field>
        <field>License_Term__c</field>
        <field>Blended_Discount__c</field>
        <field>Discount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR (3 AND 4 AND 5) OR (3 AND 6 AND 7 AND 8) OR (3 AND 9 AND 10)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Price_Book_Name__c</field>
                <operation>contains</operation>
                <value>Express</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>15</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Price_Book_Name__c</field>
                <operation>contains</operation>
                <value>Standard</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>greaterOrEqual</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>25</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>greaterOrEqual</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterOrEqual</operation>
                <value>35</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>CAE Discounts - ISM Approval</label>
        <name>CAE_Discounts_ISM_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR (3 AND 4 AND 5) OR (3 AND 6 AND 7 AND 8) OR (3 AND 9 AND 10)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Price_Book_Name__c</field>
                <operation>contains</operation>
                <value>Express</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>20</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Price_Book_Name__c</field>
                <operation>contains</operation>
                <value>Standard</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>5</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>greaterOrEqual</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>30</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>greaterOrEqual</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>40</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>CAE Discounts- ISD Approval</label>
        <name>CAE_Discounts_ISD_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR (3 AND 4 AND 5) OR (3 AND 6 AND 7 AND 8) OR (3 AND 9 AND 10)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Price_Book_Name__c</field>
                <operation>contains</operation>
                <value>Express</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>45</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Price_Book_Name__c</field>
                <operation>contains</operation>
                <value>Standard</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>20</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term_Formula__c</field>
                <operation>greaterOrEqual</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term_Formula__c</field>
                <operation>lessThan</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>40</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term_Formula__c</field>
                <operation>greaterOrEqual</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>50</value>
            </criteriaItems>
        </entryCriteria>
        <label>CAE Discounts - VP Approval</label>
        <name>CAE_Discounts_VP_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Channel team discount approval chain for revenue opportunities</description>
    <emailTemplate>unfiled$public/Discount_Approval_Notification_to_Managers</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
ISPICKVAL(Type , &apos;Revenue Opportunity&apos;),
($User.Enterprise_Major_Account_Team__c = false),
($User.Industrial_Team__c = false),
OR(
CONTAINS(Owner.UserRole.Name, &apos;CAE1&apos;),
CONTAINS(Owner.UserRole.Name, &apos;CAE2&apos;)
)
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected_Discounts_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Rejectedd</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Channel Discounts Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>20</processOrder>
    <recallActions>
        <action>
            <name>Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
