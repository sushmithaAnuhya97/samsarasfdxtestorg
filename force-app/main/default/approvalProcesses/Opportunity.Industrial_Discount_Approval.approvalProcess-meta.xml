<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount</field>
        <field>License_Term__c</field>
        <field>Blended_Discount__c</field>
        <field>Discount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR (3 AND 4 AND 5) OR (6 AND 7)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterOrEqual</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>greaterOrEqual</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>25</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>greaterOrEqual</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>35</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Industrial Discount Approval-Blended	- AVP Approval</label>
        <name>AVP_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pete.atkin@samsara.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR (3 AND 4 AND 5) OR (6 AND 7)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>15</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>greaterOrEqual</operation>
                <value>36</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>lessThan</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>40</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.License_Term__c</field>
                <operation>greaterOrEqual</operation>
                <value>60</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Blended_Discount__c</field>
                <operation>greaterThan</operation>
                <value>50</value>
            </criteriaItems>
        </entryCriteria>
        <label>Industrial Discount Approval-Blended	- VP Approval</label>
        <name>VP_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Industrial approvals for revenue opportunities</description>
    <emailTemplate>unfiled$public/Discount_Approval_Notification_to_Managers</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(TEXT(Type) = &apos;Revenue Opportunity&apos;, OR(RecordTypeId = &apos;0121a000000VnAB&apos;,RecordTypeId = &apos;0121a000000VnUx&apos;),
Account.RecordTypeId != &apos;0121a000000VnIa&apos;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_Discounts_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected_Discounts_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Rejectedd</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Industrial Discount Approval-Blended</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
