<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Management</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Operations</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>bwaldman@samsara.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Trial_Days_Open__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Industrial Free Trial Approval - Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <description>Free trial approval process for the Industrial team</description>
    <emailTemplate>Finance/Free_Trial_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(ISPICKVAL(Type , &apos;Free Trial Opportunity&apos;), OR(RecordTypeId = &apos;0121a000000VnAB&apos;,RecordTypeId = &apos;0121a000000VnUx&apos;)
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_Free_Trial_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Free_Trial_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Trial_End_Date_for_Indus_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected_Free_Trial_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Free_Trial_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Free_Trial_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Industrial Free Trial Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>6</processOrder>
    <recallActions>
        <action>
            <name>Recalled_Free_Trial_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Free_Trial_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
