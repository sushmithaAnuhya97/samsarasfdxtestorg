<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>amanda.torrez@samsara.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>anuar.duclaud@samsara.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jimena.avila@samsara.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>julia.monroy@samsara.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>santiago.padilla@samsara.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Initiate_MX_Approval__c</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>RFC Approval</label>
        <name>RFC_Approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/MX_Non_Compliant_Taxpayers_For_Review</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.MX_Approval_status__c</field>
            <operation>notEqual</operation>
            <value>Pending,Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.BillingCountry</field>
            <operation>equals</operation>
            <value>Mexico</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Initiate_MX_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Opportunity_MX_Non_Compliant_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_MX_Approval_status_to_approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>MX_Approval_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opportunity_MX_Non_Compliant_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Stage_to_Closed_Lost</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>MX_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Opportunity MX approval status approve</label>
    <processOrder>21</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
