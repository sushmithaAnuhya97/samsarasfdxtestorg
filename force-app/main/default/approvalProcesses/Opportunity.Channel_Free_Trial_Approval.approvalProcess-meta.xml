<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Fleet_Insurance_Partner_CAM_NA</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Fleet_Partner_EMEA_UK</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Fleet_Partner_NA_US</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>IND_PARTNERSHIPS_CAM_NA_US</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Management</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>VP_of_Partner</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Trial_Days_Open__c</field>
        <field>Reason_for_Extension__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Channel Free Trial Approval - Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Trial_Period__c</field>
                <operation>greaterOrEqual</operation>
                <value>60</value>
            </criteriaItems>
        </entryCriteria>
        <label>Channel Free Trial Approval - AVP Approval</label>
        <name>AVP_Approval_Request_for_Free_Trial_Extension</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Free trial approval process for the Channel partner team</description>
    <emailTemplate>Finance/Free_Trial_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(ISPICKVAL(Type , &apos;Free Trial Opportunity&apos;), ($User.Enterprise_Major_Account_Team__c = false), CONTAINS($UserRole.Name, &apos;Partnerships&apos;)
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_Free_Trial_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Free_Trial_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Trial_End_Date_for_MM_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected_Free_Trial_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Free_Trial_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Free_Trial_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Channel Free Trial Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>10</processOrder>
    <recallActions>
        <action>
            <name>Recalled_Free_Trial_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Free_Trial_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
