<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Copy_S_H_To_Quote</fullName>
        <field>ShippingHandling</field>
        <formula>Opportunity.Shipping_and_Handling__c</formula>
        <name>Copy S&amp;H To Quote</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Field_Update_Sales_Tax</fullName>
        <field>Sales_Tax_Time_Stamp__c</field>
        <formula>Opportunity.Sales_Tax__c</formula>
        <name>Field Update: Sales Tax</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Copy Shipping and Handling</fullName>
        <actions>
            <name>Copy_S_H_To_Quote</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Copy shipping and handling from Oppty to Quote at time of object creation</description>
        <formula>True</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Quote%3A Sales Tax</fullName>
        <actions>
            <name>Field_Update_Sales_Tax</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Quote.OwnerId</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>This will stamp the quote with the current sales tax at time of creation</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
