<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Auto_Approve_Credit_Limit_Exceeded_Alert</fullName>
        <description>Auto Approve Credit Limit Exceeded Alert</description>
        <protected>false</protected>
        <recipients>
            <recipient>deal-desk@samsara.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Auto_Approve_Credit_Limit_Exceeded</template>
    </alerts>
    <alerts>
        <fullName>Email_to_Deal_Desk_for_new_Internal_Finance_Request</fullName>
        <description>Email to Deal Desk for new Internal Finance Request</description>
        <protected>false</protected>
        <recipients>
            <recipient>deal-desk@samsara.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Internal_Finance_Request_Created</template>
    </alerts>
    <alerts>
        <fullName>Enterprise_Internal_Finance_Decline</fullName>
        <description>Enterprise Internal Finance Decline</description>
        <protected>false</protected>
        <recipients>
            <recipient>angie.gonzalez@samsara.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Enterprise_Internal_Finance_Decline</template>
    </alerts>
    <alerts>
        <fullName>Internal_Finance_Request_Approval</fullName>
        <description>Internal Finance Request Approved</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <field>Submitter__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Internal_Finance_Approved</template>
    </alerts>
    <alerts>
        <fullName>Internal_Finance_Request_Approval_Payment_Terms</fullName>
        <description>Internal Finance Request Approved (Payment Terms)</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <field>Submitter__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Internal_Finance_Approved_Payment_Terms</template>
    </alerts>
    <alerts>
        <fullName>Internal_Finance_Request_Declined</fullName>
        <description>Internal Finance Request Declined</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Internal_Finance_Declined</template>
    </alerts>
    <alerts>
        <fullName>Internal_Finance_Request_Declined_Payment_Terms</fullName>
        <description>Internal Finance Request Declined (Payment Terms)</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Internal_Finance_Declined_Payment_Terms</template>
    </alerts>
    <alerts>
        <fullName>Internal_Finance_Request_Needs_More_Information</fullName>
        <description>Internal Finance Request Needs More Information</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <field>Submitter__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Internal_Finance_Need_More_Information</template>
    </alerts>
    <alerts>
        <fullName>Internal_Finance_Request_Submitted</fullName>
        <description>Internal Finance Request Submitted</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/internal_Finance_Request_Submitted</template>
    </alerts>
    <rules>
        <fullName>Enterprise Internal Finance Decline</fullName>
        <actions>
            <name>Enterprise_Internal_Finance_Decline</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Internal_Finance_Approval_Request__c.Payment_Type_Approval_Status__c</field>
            <operation>equals</operation>
            <value>Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Owner_Role__c</field>
            <operation>contains</operation>
            <value>enterprise,majors,major</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Internal Finance Request Approved</fullName>
        <actions>
            <name>Internal_Finance_Request_Approval</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Internal_Finance_Approval_Request__c.Payment_Type_Approval_Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Internal Finance Request Declined</fullName>
        <actions>
            <name>Internal_Finance_Request_Declined</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Internal_Finance_Approval_Request__c.Payment_Type_Approval_Status__c</field>
            <operation>equals</operation>
            <value>Rejected</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Internal Finance Request Pending</fullName>
        <actions>
            <name>Internal_Finance_Request_Needs_More_Information</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Internal_Finance_Approval_Request__c.Payment_Type_Approval_Status__c</field>
            <operation>equals</operation>
            <value>Need More Information</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>internal Finance Request Submitted</fullName>
        <actions>
            <name>Internal_Finance_Request_Submitted</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Internal_Finance_Approval_Request__c.Submitted_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
