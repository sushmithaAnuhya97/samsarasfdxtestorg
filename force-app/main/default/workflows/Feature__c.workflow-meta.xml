<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Feature_assigned_email_notification</fullName>
        <description>Feature assigned email notification</description>
        <protected>false</protected>
        <recipients>
            <field>PM_Owner__c</field>
            <type>userLookup</type>
        </recipients>
        <senderAddress>no-reply@samsara.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Samsara_Internal_Email_Templates/Feature_PM_Owner</template>
    </alerts>
    <alerts>
        <fullName>Missing_feature_status_email</fullName>
        <description>Missing feature status email</description>
        <protected>false</protected>
        <recipients>
            <field>PM_Owner__c</field>
            <type>userLookup</type>
        </recipients>
        <senderAddress>no-reply@samsara.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Samsara_Internal_Email_Templates/Feature_missing_status</template>
    </alerts>
    <fieldUpdates>
        <fullName>Set_Completed_Flag</fullName>
        <field>Completed__c</field>
        <literalValue>1</literalValue>
        <name>Set Completed Flag</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Status_changed_field_update</fullName>
        <field>Status_Changed_Date__c</field>
        <formula>Today()</formula>
        <name>Status changed field update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Feature status calculation</fullName>
        <actions>
            <name>Status_changed_field_update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Feature__c.Status__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Notify PM owner</fullName>
        <actions>
            <name>Feature_assigned_email_notification</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <description>Notify PM owner when a new feature is assigned.</description>
        <formula>OR( ISNEW() , ISCHANGED( PM_Owner__c ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Sync Completed Status and Checkbox</fullName>
        <actions>
            <name>Set_Completed_Flag</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Feature__c.Status__c</field>
            <operation>equals</operation>
            <value>Completed</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
