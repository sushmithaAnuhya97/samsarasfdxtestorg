<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>

    <description>Reusable slds-alert message banner</description>
    <masterLabel>Message Banner</masterLabel>

    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__HomePage,lightning__RecordPage,lightning__FlowScreen">
            <property name="variation" type="String" default="base" label="Variation to use for the banner? Types: base,warning,error,offline,baseLite,info"/>
            <property name="message" type="String" default="Lorem Ipsum" label="Enter message to display in the banner"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>