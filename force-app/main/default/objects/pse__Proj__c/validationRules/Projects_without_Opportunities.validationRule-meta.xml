<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Projects_without_Opportunities</fullName>
    <active>true</active>
    <description>Rule created to override projects created without an opportunity</description>
    <errorConditionFormula>AND(
    ISBLANK(pse__Opportunity__c),
    DATEVALUE(CreatedDate) &gt; TODAY(),
    NOT(pse__Is_Template__c)
)</errorConditionFormula>
    <errorDisplayField>pse__Opportunity__c</errorDisplayField>
    <errorMessage>An Opportunity is required for non-template projects</errorMessage>
</ValidationRule>
