<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Accepted_Status_Restrictions</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    ISPICKVAL(ADR_Transfer_Status__c,&apos;Accepted&apos;),
     ADR_Transfer__c == false
    )</errorConditionFormula>
    <errorMessage>ADR Transfers can only be accepted by creating an opportunity.</errorMessage>
</ValidationRule>
