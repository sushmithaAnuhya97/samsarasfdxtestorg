<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Partner_Application_Name_Is_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    $RecordType.DeveloperName = &quot;Partner_Application&quot;,
    OR(
        ISBLANK(FirstName),
        ISBLANK(LastName)
    )
)</errorConditionFormula>
    <errorMessage>Salutation, First Name, and Last Name are required fields.</errorMessage>
</ValidationRule>
