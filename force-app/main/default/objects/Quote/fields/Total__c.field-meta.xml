<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Total__c</fullName>
    <description>Total Price (discount-adjusted line items) + sales tax (from oppty) + shipping (from oppty)</description>
    <formula>Opportunity.Amount +  Opportunity.Sales_Tax__c   +  Opportunity.Shipping_and_Handling__c + Opportunity.X3rd_Party_Products_Services__c</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Total</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <type>Currency</type>
</CustomField>
