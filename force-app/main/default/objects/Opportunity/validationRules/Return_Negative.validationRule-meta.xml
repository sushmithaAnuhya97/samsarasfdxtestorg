<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Return_Negative</fullName>
    <active>true</active>
    <description>Return must be negative</description>
    <errorConditionFormula>AND(RecordTypeId = &quot;0121a000000ARoK&quot;, 
OR( Amount &gt;0, Rebate_Amount__c &gt;0))</errorConditionFormula>
    <errorMessage>Return cannot be for a positive amount.</errorMessage>
</ValidationRule>
