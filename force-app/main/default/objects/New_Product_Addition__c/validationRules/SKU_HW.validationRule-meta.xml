<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SKU_HW</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
CONTAINS( Product_Code__c, &quot;HW&quot;),
ISBLANK( Associated_Product_ID__c )
)</errorConditionFormula>
    <errorMessage>If SKU starts with &quot;HW&quot; then &quot;associated product ID&quot; is mandatory</errorMessage>
</ValidationRule>
