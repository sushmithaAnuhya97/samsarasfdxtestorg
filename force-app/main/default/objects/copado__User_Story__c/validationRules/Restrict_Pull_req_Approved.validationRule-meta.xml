<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_Pull_req_Approved</fullName>
    <active>true</active>
    <description>Pull Req Approved Field can only be enabled by System Admins</description>
    <errorConditionFormula>AND (
NOT( $Profile.Name = &apos;System Administrator&apos;),
(copado__Pull_Requests_Approved__c),
OR(
ISCHANGED(copado__Pull_Requests_Approved__c),
AND(ISNEW())
)
)</errorConditionFormula>
    <errorDisplayField>copado__Pull_Requests_Approved__c</errorDisplayField>
    <errorMessage>You do not have the necessary permissions to enable Pull Request Approved checkbox</errorMessage>
</ValidationRule>
