<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_Lifecycle_Change_on_Deviation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
     NOT(TEXT(PDLM__Item_Revision__r.PDLM__Lifecycle_Phase__c)= TEXT(PDLM__Item_Revision__r.PDLM__Master_Item__r.PDLM__Latest_Released_Revision__r.PDLM__Lifecycle_Phase__c)),
     PDLM__Change_Order_lk__r.PDLM__Category__r.Name = &quot;Deviation&quot;
     )</errorConditionFormula>
    <errorMessage>Changing Item Lifecycle is not allowed on Deviation</errorMessage>
</ValidationRule>
