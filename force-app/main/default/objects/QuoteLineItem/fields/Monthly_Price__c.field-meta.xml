<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Monthly_Price__c</fullName>
    <description>*New System* License year value divided by 12 for licenses and blank for hardware.</description>
    <formula>IF(BEGINS(PricebookEntry.Product2.ProductCode,&apos;LIC&apos;),  (1.00-Discount)*PricebookEntry.UnitPrice* Quote.Opportunity.License_Term__c  /12,NULL)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Monthly Price</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <type>Currency</type>
</CustomField>
