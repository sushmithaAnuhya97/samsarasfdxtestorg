<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Denial_Reason_Denied_at_Closing</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL(CR_Status__c, &quot;Denied at Closing&quot;), ISBLANK(Rejection_Reason__c))</errorConditionFormula>
    <errorMessage>Require denial reason when partner is denied</errorMessage>
</ValidationRule>
