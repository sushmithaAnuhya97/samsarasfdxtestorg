<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Delinquency_Orders_Blocked</fullName>
    <active>false</active>
    <errorConditionFormula>NOT($Setup.Global_Automation_Settings__c.Skip_Validation_Rule__c)&amp;&amp;
NOT($Permission.Validation_Rule_Exemption)&amp;&amp;
ISPICKVAL(SBQQ__Account__r.Delinquency_Status__c, &apos;Orders Blocked&apos;) &amp;&amp;
OR(ISPICKVAL(ApprovalStatus__c, &apos;Pending&apos;), ISPICKVAL(ApprovalStatus__c, &apos;Approved&apos;))</errorConditionFormula>
    <errorMessage>This Account is blocked for all orders to continue further with Samsara due to delinquency. Please reach out to Finance for additional information!</errorMessage>
</ValidationRule>
