<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_Duration__c</fullName>
    <description>If the case is closed, it calculates the number of hours from open to close. If the case is open, it calculates the number of hours from open to now.</description>
    <externalId>false</externalId>
    <formula>IF (IsClosed = TRUE,
(ClosedDate - CreatedDate)*24, (NOW() -CreatedDate )*24)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Case Duration (Hours)</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
